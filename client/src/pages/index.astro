---
import Layout from '../layouts/Layout.astro';
import Login from '../components/Login.astro';
import { Icon } from 'astro-icon';
import EditProduct from '../components/EditProduct.astro';
---

<Layout title="Delika - Ecommerce">
	<div class="fixed w-full">
		<nav class="flex items-center justify-between py-[12px] px-4 dark:bg-zinc-900 transition-all duration-500 bg-zinc-50 shadow-xl lg:px-32 h-[72px]">
			<div class="w-[36px] text-indigo-500 cursor-pointer lg:hidden" onclick="" id="bars">
				<Icon name="uis:bars"/>
			</div>
			<div>
				<h1 class="dark:text-stone-50 transition-none text-3xl font-fasthand">Delika</h1>
			</div>
			<div class="flex items-center justify-center gap-4">
				<div class="items-center text-indigo-500 hidden lg:flex justify-center gap-4" id="movileContainer">
					<div class="flex items-center justify-center gap-2 hover:scale-105 duration-100 transition-all cursor-pointer" id="iniciar">
						<div class="w-[28px]">
							<Icon name="ic:baseline-person"/>
						</div>
						<h1 class="text-sm font-medium">Iniciar Sesion</h1>
					</div>
					<div class="hidden items-center gap-3 transition-all duration-300 flex-row-reverse lg:flex-row" id="userContainer">
						<img src="https://robohash.org/admin16" alt="" class="rounded-full max-w-[43px] lg:max-w-[45px] border-indigo-500 border-2" id="userImage">
						<h1 class="font-medium font-small-caps hidden lg:flex" id="userAlias"></h1>
						<div class="flex items-center cursor-pointer" id="logout">
							<i class="fa-solid fa-right-from-bracket fa-rotate-180"></i>
						</div>
					</div>
					<div class="border-l-[1px] border-indigo-500 h-6 hidden lg:block">
					</div>
				</div>
				<div class="transition-all duration-200 border-transparent hover:bg-opacity-90 border-2 hover:border-indigo-500 rounded-lg p-[4px]">
					<button class="text-2xl lg:text-xl" id="sun">ðŸŒž</button>
					<button class="text-2xl hidden lg:text-xl" id="moon">ðŸŒš</button>
				</div>
			</div> 
		</nav>
	</div>
</Layout>
<div class="w-0 transition-all duration-300 fixed top-[64px]" id="login">
	<Login />
</div>

<div class="w-3/4 lg:w-0 transition-all duration-300 fixed top-[70px] right-0" id="caja">
	<EditProduct/>
</div>

<script>
	const bars = document.getElementById('bars');
	const login = document.getElementById('login');
	const cont = document.getElementById('cont');
	const iniciar = document.getElementById('iniciar');
	bars.addEventListener('click', () => {
		login.classList.toggle('w-0');
		login.classList.toggle('w-[100%]');
		cont.classList.toggle('ml-0');
		cont.classList.toggle('ml-[-200px]');
	});

	iniciar.addEventListener('click', () => {
		login.classList.toggle('w-0');
		login.classList.toggle('w-[100%]');
		cont.classList.toggle('ml-0');
		cont.classList.toggle('ml-[-200px]');
	});

	
</script>


